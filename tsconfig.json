{
	"compilerOptions": {
		"module": "NodeNext",
		"target": "ES2020",
		"outDir": "dist",
		"lib": ["ESNext", "ESNext.AsyncIterable"],
		"strict": true,
		"moduleResolution": "NodeNext",
		"declaration": true,
		"verbatimModuleSyntax": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"],
	"typedocOptions": {
		"entryPoints": ["./src/index.ts"],
		"name": "ZenFS Linux",
		"out": "docs",
		"excludeReferences": true
	}
}
